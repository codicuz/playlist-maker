<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtons" parent="MainButtonsBase">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ActivityTitles" parent="ActivityTitlesBase">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityTitlesSecondary" parent="ActivityTitlesSecondaryBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="SettingsButtons" parent="SettingsButtonsBase">
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainView" parent="MainViewBase">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SwitchButtons" parent="SwitchButtonsBase">
        <item name="android:textColor">@color/white</item>
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/light_blue</item>
    </style>

    <style name="EditTextView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ClearButton">
        <item name="tint">@color/black</item>
    </style>
</resources>
