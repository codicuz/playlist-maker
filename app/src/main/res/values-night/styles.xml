<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtons" parent="MainButtonsBase">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="iconTint">@color/app_black</item>
    </style>

    <style name="ActivityTitles" parent="ActivityTitlesBase">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityTitlesSecondary" parent="ActivityTitlesSecondaryBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="SettingsButtons" parent="SettingsButtonsBase">
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainView" parent="MainViewBase">
        <item name="android:background">@color/app_black</item>
    </style>

    <style name="SwitchButtons" parent="SwitchButtonsBase">
        <item name="android:textColor">@color/white</item>
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/light_blue</item>
    </style>

    <style name="EditTextView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableTint">@color/app_black</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textColorHint">@color/app_black</item>
    </style>

    <style name="ClearButton">
        <item name="tint">@color/app_black</item>
    </style>

    <style name="RcTrackTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RcArtistsNameTrackTime">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RcDelimiterTimeButton">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="NoInternetImage">
        <item name="android:src">@drawable/no_internet_dark</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoInternetButton" parent="NoInternetButtonBase">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="NotFound" parent="NotFoundBase">
        <item name="android:src">@drawable/not_found_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
