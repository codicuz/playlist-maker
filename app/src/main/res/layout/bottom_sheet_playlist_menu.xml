<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    style="@style/Fragment"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <View
        android:id="@+id/dragHandle"
        style="@style/BottomSheetCap"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_bottom_sheet_shape" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/playlistMenuCover"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="8dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_artwork_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playlistMenuTitle"
                style="@style/PlaylistMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Имя плейлиста" />

            <TextView
                android:id="@+id/playlistMenuTrackCount"
                style="@style/PlaylistMenuTrackCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="158 треков" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/menuShare"
        style="@style/PlaylistMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="21dp"
        android:text="@string/share"
        tools:text="@string/share" />

    <TextView
        android:id="@+id/menuEdit"
        style="@style/PlaylistMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="21dp"
        android:text="@string/edit_information"
        tools:text="@string/edit_information" />

    <TextView
        android:id="@+id/menuDelete"
        style="@style/PlaylistMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="21dp"
        android:text="@string/delete_playlist"
        tools:text="@string/delete_playlist" />

</LinearLayout>