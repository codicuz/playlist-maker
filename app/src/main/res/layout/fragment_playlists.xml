<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <Button
        android:id="@+id/createPlaylistButton"
        style="@style/ActivityMediaButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="46dp" />

    <ImageView
        style="@style/NotFound"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/not_found" />

    <TextView
        android:id="@+id/media_tab"
        style="@style/ActivityMediaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_playlists" />
</LinearLayout>