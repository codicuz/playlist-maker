<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AudButtonBack">
        <item name="android:background">?attr/colorGlobalBackground</item>
        <item name="tint">@color/app_black</item>
    </style>

    <style name="AudMainTextBase">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AudMainText" parent="AudMainTextBase">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="AudArtistNameBase">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AudArtistName" parent="AudArtistNameBase">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="AudBtnPlayBase">
        <item name="android:background">?attr/colorGlobalBackground</item>
    </style>

    <style name="AudBtnPlay" parent="AudBtnPlayBase">
        <item name="android:src">@drawable/btn_aud_play</item>
    </style>

    <style name="AudAdditionalButtonsBase">
        <item name="android:background">@drawable/oval_btn</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="AudButtonAdd" parent="AudAdditionalButtonsBase">
        <item name="android:src">@drawable/btn_aud_add_track</item>
    </style>

    <style name="AudButtonLike" parent="AudAdditionalButtonsBase">
        <item name="android:src">@drawable/btn_aud_like_false</item>
    </style>

    <style name="AudTrackDetailsValuesBase">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AudTrackDetailsValues" parent="AudTrackDetailsValuesBase">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="AudCurrentTrackTime">
        <item name="android:textColor">@color/app_black</item>
    </style>
</resources>