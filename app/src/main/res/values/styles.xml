<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonsBase" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginHorizontal">@dimen/button_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/button_icon_size</item>
    </style>

    <style name="MainButtons" parent="MainButtonsBase">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:iconTint">@color/app_black</item>
    </style>

    <style name="ActivityTitlesBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ActivityTitles" parent="ActivityTitlesBase">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityTitlesSecondaryBase" parent="ActivityTitles">
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">28dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="ActivityTitlesSecondary" parent="ActivityTitlesSecondaryBase">
        <item name="android:textColor">@color/app_black</item>
        <item name="android:drawableTint">@color/app_black</item>
    </style>

    <style name="ActivityMediaTabText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="ActivityMediaTextBase">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ActivityMediaText" parent="ActivityMediaTextBase">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActivityMediaButtonBase">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/btn_new_playlist</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/new_playlist</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ActivityMediaButton" parent="ActivityMediaButtonBase">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/app_black</item>
    </style>

    <style name="ActivityMediaBase">
        <item name="tabTextAppearance">@style/ActivityMediaTabText</item>
    </style>

    <style name="ActivityMedia" parent="ActivityMediaBase">
        <item name="tabTextColor">@color/app_black</item>
        <item name="tabIndicatorColor">@color/app_black</item>
    </style>

    <style name="SettingsButtonsBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsButtons" parent="SettingsButtonsBase">
        <item name="drawableTint">@color/gray</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="SwitchButtonsBase" parent="SettingsButtonsBase">
        <item name="android:paddingEnd">3dp</item>
        <item name="switchMinWidth">40dp</item>
    </style>

    <style name="SwitchButtons" parent="SwitchButtonsBase">
        <item name="drawableTint">@color/gray</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/light_gray</item>
        <item name="minWidth">50dp</item>
    </style>

    <style name="BaseHWMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainViewBase" parent="BaseHWMatchParent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainView" parent="MainViewBase">
        <item name="android:background">@color/blue
        </item>
    </style>

    <style name="SecondaryViews" parent="BaseHWMatchParent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditTextView">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="ClearButton">
        <item name="tint">@color/gray</item>
    </style>

    <style name="RcTrackTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RcArtistsNameTrackTime">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="RcDelimiterTimeButton">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="NoInternetImage">
        <item name="android:src">@drawable/no_internet_light</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="NoInternetButtonBase" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="NoInternetButton" parent="NoInternetButtonBase">
        <item name="android:backgroundTint">@color/app_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NotFoundBase">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="NotFound" parent="NotFoundBase">
        <item name="android:src">@drawable/not_found_light</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="BottomNav">
        <item name="itemIconTint">@color/bottom_nav_colors_day</item>
        <item name="itemTextColor">@color/bottom_nav_colors_day</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
