<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonsBase">
        <item name="android:layout_marginHorizontal">@dimen/button_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/button_icon_size</item>
    </style>

    <style name="MainButtons" parent="MainButtonsBase">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:iconTint">@color/black</item>
    </style>

    <style name="ActivityTitlesBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ActivityTitles" parent="ActivityTitlesBase">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityTitlesSecondaryBase" parent="ActivityTitles">
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ActivityTitlesSecondary" parent="ActivityTitlesSecondaryBase">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="SettingsButtonsBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsButtons" parent="SettingsButtonsBase">
        <item name="drawableTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchButtonsBase" parent="SettingsButtonsBase">
        <item name="android:paddingEnd">3dp</item>
        <item name="switchMinWidth">40dp</item>
    </style>

    <style name="SwitchButtons" parent="SwitchButtonsBase">
        <item name="drawableTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/gray_light</item>
        <item name="minWidth">50dp</item>
    </style>

    <style name="BaseHWMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainViewBase" parent="BaseHWMatchParent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainView" parent="MainViewBase">
        <item name="android:background">@color/blue
        </item>
    </style>

    <style name="SecondaryViews" parent="BaseHWMatchParent">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingVertical">16dp</item>
    </style>
</resources>
